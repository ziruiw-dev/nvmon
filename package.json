{
    "name": "nvidia-monitor",
    "displayName": "Nvidia Monitor",
    "description": "Displays Nvidia GPU usage in status bar.",
    "version": "25.5.2",
    "publisher": "ziruiwang",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#008080",
        "theme": "dark"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Nvidia Monitor",
            "properties": {
                "nvidiaMonitor.alignLeft": {
                    "type": "boolean",
                    "default": true,
                    "description": "Toggles the alignment of the status bar."
                },
                "nvidiaMonitor.updateFrequencyMs": {
                    "type": "number",
                    "default": 500,
                    "minimum": 200,
                    "maximum": 5000,
                    "description": "How long in ms between updates to resources."
                },
                "nvidiaMonitor.showSum": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggles the display of the sum of all GPUs. Useful when you have more than 4 GPUs or prefer a compact display."
                },
                "nvidiaMonitor.commandTimeoutMs": {
                    "type": "number",
                    "default": 2000,
                    "minimum": 500,
                    "maximum": 10000,
                    "description": "Timeout in milliseconds for the nvidia-smi command. If the command takes longer than this, it will be considered failed."
                }
            }
        }
    },
    "repository": {
        "url": "https://github.com/ziruiw-dev/nvmon.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "execa": "^5.1.1",
        "fast-xml-parser": "^4.2.2",
        "glob": "^10.3.10"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.60.0",
        "typescript": "^5.3.3"
    },
    "overrides": {
        "cross-spawn": "^7.0.3"
    }
}
